{
  "name": "rmeal-api",
  "version": "1.0.0",
  "description": "a simple meal api",
  "main": "index.js",
  "scripts": {
    "start": "node ./build/index.js",
    "test": "nyc --require @babel/register mocha --recursive api/test/*.spec.js --exit||true",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls-coverage": "coveralls < lcov.info",
    "codeclimate-coverage": "codeclimate-test-reporter < lcov.info",
    "coverage": "nyc npm test && npm run generate-lcov && npm run coveralls-coverage && npm run codeclimate-coverage",
    "build": "babel -d ./build ./api -s",
    "dev": "nodemon --exec babel-node ./api/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IIsiolu/rmealApp.git"
  },
  "bugs": {
    "url": "https://github.com/IIsiolu/rmealApp/issues"
  },
  "keywords": [
    "meals",
    "breafasts",
    "lunch",
    "dinner"
  ],
  "author": "Ikenna Isiolu <david.isiolu@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/IIsiolu/rmealApp#README",
  "dependencies": {
    "body-parser": "^1.18.3",
    "eslint-plugin-import": "^2.16.0",
    "express": "^4.16.4",
    "joi": "^14.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "mocha": "^6.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  }
}
