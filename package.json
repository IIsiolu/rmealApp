{
  "name": "rmeal-api",
  "version": "1.0.0",
  "description": "a simple meal api",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --exec babel-node api/index.js ",
    "test": "mocha --require @babel/register --recursive api/test/*.spec.js --exit||true",
    "generate-lcov": "nyc report --reporter=text-lcov > lcov.info",
    "coveralls": "jscoverage lib && YOURPACKAGE_COVERAGE=1 nodeunit --reporter=lcov test | coveralls",
    "coveralls-coverage": "coveralls < lcov.info",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "heroku-postbuild": "npm install --production && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IIsiolu/rmealApp.git"
  },
  "bugs": {
    "url": "https://github.com/IIsiolu/rmealApp/issues"
  },
  "keywords": [
    "meals",
    "breafasts",
    "lunch",
    "dinner"
  ],
  "author": "Ikenna Isiolu <david.isiolu@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/IIsiolu/rmealApp#README",
  "dependencies": {
    "@babel/core": "^7.3.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "babel-cli": "^6.26.0",
    "body-parser": "^1.18.3",
    "eslint-plugin-import": "^2.16.0",
    "express": "^4.16.4",
    "joi": "^14.3.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "mocha": "^6.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.3.0"
  }
}
